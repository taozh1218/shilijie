<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reset_pwd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    android:orientation="vertical"
    tools:context="com.jiaohe.sakamichi.xinzhiying.ui.acitivity.ForgetPwdActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        >

        <Button
            android:id="@+id/btn_return_forgetAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:background="@null"
            android:drawableLeft="@mipmap/ic_return"
            android:padding="5dp"
            android:text="重置密码"
            android:textColor="#000000"
            android:textSize="18sp"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="#FFFFFF"
        android:paddingLeft="19dp"

        >

        <EditText
            android:id="@+id/edt_account_forgetAct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="@string/account_hint"
            />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:paddingLeft="19dp"
        android:paddingRight="10dp"
        >

        <Button
            android:id="@+id/btn_getVerificationCode_forgetAct"
            android:layout_width="95dp"
            android:layout_height="31dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/btn_bg"
            android:text="获取验证码"
            android:textColor="#FFFFFF"
            />

        <EditText
            android:id="@+id/edt_verificationCode_forgetAct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/btn_getVerificationCode_forgetAct"
            android:background="@null"
            android:hint="请输入验证码"
            />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:paddingLeft="19dp">

        <EditText
            android:id="@+id/edt_pwd_forgetAct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="@null"
            android:focusableInTouchMode="true"
            android:hint="请设置密码"
            android:inputType="textPassword"


            />

        <CheckBox
            android:id="@+id/cb_displayPwd_forgetAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:button="@drawable/selector_password"
            android:checked="false"/>
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_alignParentEnd="true"-->
    </LinearLayout>


    <Button
        android:id="@+id/btn_submit_forgetAct"
        android:layout_width="317dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:background="@mipmap/btn_bg"
        android:text="确定"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        />


</LinearLayout>
