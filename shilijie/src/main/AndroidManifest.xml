        <activity android:name=".ui.acitivity.BusRouteActivity"></activity>
        <activity android:name=".ui.acitivity.BusRouteDetailActivity"></activity>
        <activity android:name=".ui.acitivity.WalkRouteDetailActivity"></activity>

    </application>

