<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jiaohe.sakamichi.xinzhiying.ui.acitivity.ChangeSignatureActivity">


    <RelativeLayout
        android:id="@+id/rl_title_changeSignAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title"
        android:paddingLeft="16dp"
        >

        <ImageView
            android:id="@+id/img_back_changeSignAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_icon"
            />

        <Button
            android:id="@+id/btn_back_changeSignAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:background="@null"
            android:text="修改签名"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            />

        <Button
            android:id="@+id/btn_save_changeSignAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:text="保存"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_title_changeSignAct"
        android:layout_marginTop="20dp"
        android:background="@mipmap/img_sign_background"
        >

        <EditText
            android:id="@+id/edt_signature_changeSignAct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:background="@null"
            android:hint="请输入新签名"
            />

        <!--<ImageView-->
        <!--android:id="@+id/img_editTextLine_changeSignAct"-->
        <!--android:layout_width="308dp"-->
        <!--android:layout_height="2dp"-->
        <!--android:layout_below="@id/edt_signature_changeSignAct"-->
        <!--android:src="@mipmap/img_line"-->
        <!--/>-->
    </RelativeLayout>
</RelativeLayout>
